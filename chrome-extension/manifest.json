{
  "manifest_version": 3,
  "name": "Screenshot Stabilizer",
  "version": "1.0.0",
  "description": "Stabilizes DOM rendering and ensures full UI visibility for screenshot capture",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}




