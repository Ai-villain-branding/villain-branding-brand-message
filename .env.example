# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Server Port (Railway will set this automatically, but you can override)
PORT=3000

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional: Crawler Configuration
MAX_CRAWL_PAGES=50
MAX_CRAWL_DEPTH=3
CRAWL_DELAY_MS=1000
REQUEST_TIMEOUT_MS=30000

# Optional: Screenshot Configuration
SCREENSHOT_WIDTH=1440
SCREENSHOT_HEIGHT=900

# Google Drive (Optional - for screenshot mirroring)
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Cookie Consent Handling (5-Layer Resilience System)
# Layer 1: Network-level blocking of consent provider scripts
CONSENT_NETWORK_BLOCKING_ENABLED=true

# Layer 3: CSS injection to hide cookie banners
CONSENT_CSS_INJECTION_ENABLED=true

# Logging level for consent handler (debug, info, warn, error)
CONSENT_LOGGING_LEVEL=info

# Layer 5: Fallback engines (Puppeteer and Selenium)
# Note: Disabled by default. Only enable if you need extra resilience beyond Playwright.
# Requires: npm install puppeteer selenium-webdriver chromedriver
ENABLE_PUPPETEER_FALLBACK=false
ENABLE_SELENIUM_FALLBACK=false
# Run 'node get_google_refresh_token.js' to get your refresh token, then add it here:
GOOGLE_DRIVE_REFRESH_TOKEN=refresh_token

# Scrappey Scraping Browser Configuration (Required for screenshot capture module)
SCRAPPEY_API_KEY=scrappey_api_key
