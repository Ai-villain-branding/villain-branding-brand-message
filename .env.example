# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Server Port (Railway will set this automatically, but you can override)
PORT=3000

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional: Crawler Configuration
MAX_CRAWL_PAGES=50
MAX_CRAWL_DEPTH=3
CRAWL_DELAY_MS=1000
REQUEST_TIMEOUT_MS=30000

# Optional: Screenshot Configuration
SCREENSHOT_WIDTH=1440
SCREENSHOT_HEIGHT=900

# Google Drive (Optional - for screenshot mirroring)
GOOGLE_DRIVE_CLIENT_ID=your_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_client_secret_here
# Run 'node scripts/tools/get_google_refresh_token.js' to get your refresh token
GOOGLE_DRIVE_REFRESH_TOKEN=your_refresh_token_here

# Consent Neutralization & Overlay Bypass (Aggressive Universal Bypass System)
# Logging level for consent handler (debug, info, warn, error)
CONSENT_LOGGING_LEVEL=info

# Cloudflare Bypass Extension
CLOUDFLARE_EXTENSION_ENABLED=true
CLOUDFLARE_BYPASS_TIMEOUT=180000

# Fallback Engines (Optional - disabled by default)
# Note: Only enable if you need extra resilience beyond Playwright
# Requires: npm install puppeteer selenium-webdriver chromedriver
ENABLE_PUPPETEER_FALLBACK=false
ENABLE_SELENIUM_FALLBACK=false

# Scrappey API (Optional - NOT RECOMMENDED, use free methods instead)
# The aggressive bypass system works without paid services
# SCRAPPEY_API_KEY=your_scrappey_key_here

# Proxy Rotation (Optional - for avoiding IP bans)
# Comma-separated list of proxy URLs
# Format: protocol://user:pass@host:port or protocol://host:port
# Example: http://user:pass@proxy1.com:8080,http://proxy2.com:8080
# PROXY_LIST=

# Rate Limiting (Optional - to avoid triggering bot detection)
# Minimum delay between requests to the same domain (milliseconds)
RATE_LIMIT_MIN_DELAY=1000
# Maximum delay between requests (actual delay is random between min and max)
RATE_LIMIT_MAX_DELAY=3000
